<div class="tab-pane fade" id="appointmentTab" role="tabpanel" aria-labelledby="appointment-tab">
    <div class="row">
      <form id="updAppointmentForm" class="col">
        <div class="row justify-content-center">
            <div class="col">
                <div>
                    <label for="appointmentId" class="form-label">RDV</label>
                    <select id="appointmentId" class="form-select" name="appointmentId" aria-label="Default select example" style="margin-bottom: 16px; ">
                        <% appointments.forEach(function(appointment) { %>
                            <option value="<%= appointment.id %>">
                                <%= appointment.title %>
                            </option>
                        <% }); %>
                    </select> 
                </div>
                <div>
                    <label for="status" class="form-label">Statut</label>
                    <select id="status" class="form-select" name="status" aria-label="Default select example">
                        <option value="pending">En attente</option>
                        <option value="approved">Accepté</option>
                        <option value="declined">Décliné</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 20px; ">MODIFIER</button>
            </div>
            <div class="col">
                <%- include('appointmentFormBase') %>
            </div>
        </div>
      </form>
    </div>
</div>